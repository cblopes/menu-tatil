@model IEnumerable<MenuTatil.Restaurant>

@{
    ViewData["Title"] = "Meus Restaurantes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Restaurante</a>
</p>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td class="text-end">
                <div class="btn-group" role="group">
                    <a class="btn btn-secondary" asp-controller="Menus" asp-action="Create" asp-route-restaurantId="@item.Id">Ver Cardápio</a>

                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></button>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Editar</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a></li>
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
