@model IEnumerable<MenuTatil.Restaurant>

@{
    ViewData["Title"] = "Restaurantes Parceiros";
}

<h1>@ViewData["Title"]</h1>
<hr/>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a class="btn btn-warning" asp-controller="Menus" asp-action="Index" asp-route-restaurantId="@item.Id">Ver Cardápio</a>
            </td>
        </tr>
}
    </tbody>
</table>
